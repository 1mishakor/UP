<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="355.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.postman.MailRun">
   <children>
      <Label alignment="CENTER" layoutX="38.0" layoutY="14.0" prefHeight="27.0" prefWidth="280.0" text="Отправление письма">
         <font>
            <Font name="Cambria" size="24.0" />
         </font>
      </Label>
      <TextArea fx:id="Mail" layoutX="15.0" layoutY="143.0" prefHeight="214.0" prefWidth="323.0">
         <font>
            <Font name="Cambria" size="14.0" />
         </font>
      </TextArea>
      <TextField fx:id="logrun" layoutX="16.0" layoutY="72.0" prefHeight="25.0" prefWidth="323.0" promptText="Введите логин, кому хотите отвправить">
         <font>
            <Font name="Cambria" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="titleMail" layoutX="15.0" layoutY="107.0" prefHeight="25.0" prefWidth="323.0" promptText="Тема письма">
         <font>
            <Font name="Cambria" size="14.0" />
         </font>
      </TextField>
      <Button fx:id="run" layoutX="104.0" layoutY="363.0" mnemonicParsing="false" onAction="#runMail" prefHeight="32.0" prefWidth="149.0" style="-fx-background-color: #00BFFF;" text="Отпавить" textFill="WHITE">
         <font>
            <Font name="Cambria" size="17.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
